require File.expand_path '../lib/teacup/version.rb', __FILE__

# - - - - - - - - - - - - - - - - - - -
# Tasks
# - - - - - - - - - - - - - - - - - - -

desc 'display Teacup\'s current version'
task(:version) { version }

# - - - - - - - - - - - - - - - - - - -
# Helpers
# - - - - - - - - - - - - - - - - - - -

def version
  puts "Teacup #{Teacup::VERSION}"
end
